# ===================================
# Environment Variables Template
# ===================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# ===================================
# Supabase Configuration
# ===================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Public URL của Supabase project
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Public anon key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (KEEP SECRET - only use on server)
# ⚠️ NEVER expose this to client code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# Application Configuration
# ===================================

# Base URL của ứng dụng
NEXT_PUBLIC_BASE_URL=http://localhost:9002

# Environment (development, staging, production)
NODE_ENV=development

# ===================================
# Security Configuration
# ===================================

# Secret key for encryption (generate with: openssl rand -hex 32)
ENCRYPTION_SECRET=your-32-character-secret-key-here

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-session-secret-here

# API key for admin operations (optional)
ADMIN_API_KEY=your-admin-api-key-here

# ===================================
# Email Configuration (Optional)
# ===================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===================================
# File Upload Configuration (Optional)
# ===================================

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ===================================
# Rate Limiting Configuration (Optional)
# ===================================

# Rate limit for API requests (requests per minute)
API_RATE_LIMIT=60

# Rate limit for authentication (attempts per 15 minutes)
AUTH_RATE_LIMIT=5

# ===================================
# External Services (Optional)
# ===================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# ===================================
# Development Tools (Optional)
# ===================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false

